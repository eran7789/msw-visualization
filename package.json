{
  "name": "app-name",
  "version": "0.0.1",
  "description": "app description",
  "main": "index.js",
  "scripts": {
    "build:server": "node_modules/.bin/babel --ignore node_modules -d build/server src/server",
    "copy:static": "cp -r src/server/static build/server",
    "heroku-postbuild": "npm run build:client && npm run build:ssr && npm run build:server && npm run copy:static",
    "start": "nodemon --exec node build/server/index.js",
    "start:dev": "nodemon --exec npm run babel-node -- src/server/index.js",
    "babel-node": "babel-node --ignore node_modules,src/server/static,src/server/utils/ssr",
    "build:dev": "NODE_ENV=development webpack --progress --config webpack.config.js --watch",
    "build": "NODE_ENV=production webpack --progress --config webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/500tech/ssr-boiler-plate.git"
  },
  "author": "Eran Keren <erank@500tech.com>",
  "license": "ISC",
  "moduleRoots": [
    "src"
  ],
  "dependencies": {
    "app-module-path": "2.2.0",
    "babel-cli": "6.26.0",
    "babel-plugin-module-resolver": "3.0.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-preset-react": "6.24.1",
    "cheerio": "1.0.0-rc.2",
    "clean-webpack-plugin": "0.1.17",
    "copy-webpack-plugin": "4.2.3",
    "dotenv": "5.0.0",
    "dotenv-webpack": "1.5.4",
    "expose-loader": "0.7.4",
    "hapi": "17.2.0",
    "html-webpack-plugin": "3.2.0",
    "ignore-loader": "0.1.2",
    "inert": "5.1.0",
    "lodash": "4.17.5",
    "nodemon": "1.15.0",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-helmet": "5.2.0",
    "react-redux": "5.0.6",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "react-router-config": "1.0.0-beta.4",
    "redux": "3.7.2",
    "redux-actions": "2.2.1",
    "redux-logger": "3.0.6",
    "reselect": "3.0.1",
    "superagent": "3.8.2",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.3",
    "webpack-merge": "4.1.1"
  },
  "engines": {
    "node": "8.9.2"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "requirePragma": false
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "file-loader": "1.1.11"
  }
}
